{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        //strictness
        "strict": true,
        "noUncheckedIndexedAccess": true,

        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "build",
        "sourceMap": true,

        "lib": ["ES2022"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/*", "./src/__test__/**/*"],
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "ignore": ["(?:^|/)node_modules/"]
    }
}
